{% extends 'layout.html.twig' %}

{# Override content title #}
{% block title %}Liste des contacts{% endblock %}

{# Override main content #}
{% block content %}

  <a href="{{ baseUrl }}dashboard/contacts/new" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-plus"></i> Créer</a>

  {% if contacts %}
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Nom et prénom</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
    {% for contact in contacts %}
        <tr>
          <th scope="row">{{ contact.id }}</th>
          <td>{{ contact.lastname }} {{ contact.firstname }}</td>
          <td>
            <a class="btn btn-default"><i class="glyphicon glyphicon-edit"></i></a>
            <a class="btn btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
          </td>
        </tr>
    {% endfor %}
      </tbody>
    </table>

  {% else %}
    <p>Il n'y aucun contact dans la base de données !</p>
  {% endif %}

{% endblock %}